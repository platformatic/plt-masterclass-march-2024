{
  "$schema": "https://platformatic.dev/schemas/v1.30.0/runtime",
  "entrypoint": "composer",
  "allowCycles": false,
  "hotReload": true,
  "autoload": {
    "path": "services",
    "exclude": [
      "docs"
    ]
  },
  "server": {
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}",
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    },
    "cors": {
      "origin": "*"
    }
  },
  "managementApi": "{PLT_MANAGEMENT_API}"
}
